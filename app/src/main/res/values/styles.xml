<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="center_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="scrollview_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_linespacing_multiplier</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>
</resources>